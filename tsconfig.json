{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"skipLibCheck": true,
		"noEmit": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"removeComments": true,
		"allowImportingTsExtensions": true,
		"target": "es2022",
		"module": "Node16"
	},
	"compileOnSave": false,
	//	"include": ["src/*.ts"],
	"exclude": ["node_modules"]
}
